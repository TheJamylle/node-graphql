datasource db {
  provider = "sqlite" 
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  password    String
  email       String   @unique
  posts       Post[]
}

